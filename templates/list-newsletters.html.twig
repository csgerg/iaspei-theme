{% extends 'partials/base.html.twig' %}

{% block content %}
  {% if config.plugins.breadcrumbs.enabled %}
    {% include 'partials/breadcrumbs.html.twig' %}
  {% endif %}

  <h1>{{ page.title }}</h1>

  <div class="container">
    <div class="columns">
      <div class="column col-2 col-lg-3 col-md-12 col-sm-12">
        <ul class="nav">
          {% for p in page.parent.collection.order('folder', 'asc') %}
            <li class="nav-item">
              <a href="{{p.url}}">{{ p.title }}</a>
            </li>
          {% endfor %}
            <li class="nav-item">
              <a href="ftp://ftp.iaspei.org/pub/newsletters/">Newsletters on our FTP</a>
            </li>
        </ul>
      </div>
      <div class="column col-10 col-lg-9 col-md-12 col-sm-12">
        <div class="columns">
          {% for column in page.content | split('<hr />') %}
          <div class="column col-3 col-xl-3 col-lg-4 col-md-5 col-sm-6 col-xs-12">
              <td>{{ column }}</td>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
    {% if page.header.data.footernote %}
    <div class="columns">
      <div class="column col-12">
        <p>
          <em>All Newsletter marked with a star only survived because the Seismological Society of Japan redistributed
          the IASPEI Newsletters in Japan in their newsletter "Seismological Society of Japan Newsletter"
          (ISSN 0919-5319). Many thanks to Kenji Satake, who provided IASPEI with scans of these otherwise lost issues.
          </em>
        </p>
      </div>
    </div>
    {% endif %}
  </div>

{% endblock %}
