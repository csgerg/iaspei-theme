{% extends 'partials/base.html.twig' %}

{% block content %}
  {% if config.plugins.breadcrumbs.enabled %}
      {% include 'partials/breadcrumbs.html.twig' %}
  {% endif %}
  <h1>{{ page.title }}</h1>

  <div class="container">
    <div class="columns">
    {% for column in page.content | split('<hr />') %}
        <div class="column col-6 col-sm-12">{{ column }}</div>
    {% endfor %}
    </div>
  </div>
{% endblock %}
