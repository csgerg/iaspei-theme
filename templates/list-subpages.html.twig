{% extends 'partials/base.html.twig' %}

{% block content %}
    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}
    <h1>{{ page.title }}</h1>

    <ul>
    {% for p in page.collection.order('folder','asc') %}
        <li><strong><a href="{{p.url}}">{{ p.title }}</a></strong></li>
    {% endfor %}
    </ul>
{% endblock %}
